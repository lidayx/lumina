{
  "name": "lumina",
  "version": "1.0.10",
  "description": "Lumina（快搜）- 免费的 Alfred/uTools 替代品，快如闪电的跨平台应用搜索启动器",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder --dir",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win",
    "build:linux": "vite build && electron-builder --linux",
    "build:all": "vite build && electron-builder --mac --win --linux",
    "generate:icon": "./scripts/generate-icon.sh",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\""
  },
  "keywords": [
    "electron",
    "launcher",
    "alfred",
    "alfred-alternative",
    "spotlight",
    "spotlight-alternative",
    "utools",
    "utools-alternative",
    "application-launcher",
    "quick-launch",
    "app-launcher",
    "macos-launcher",
    "windows-launcher",
    "linux-launcher",
    "search-helper",
    "productivity",
    "file-search",
    "application-search",
    "bookmark-manager",
    "open-source",
    "free",
    "cli-alternative",
    "rofi-alternative",
    "ulauncher-alternative",
    "albert-alternative"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.2"
  },
  "dependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/sql.js": "^1.4.9",
    "chokidar": "^4.0.3",
    "electron-store": "^11.0.2",
    "fuse.js": "^7.0.0",
    "pinyin": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.13.0",
    "zustand": "^4.4.7"
  }
}
